        <EditText
            android:id="@+id/height03"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/height1"
            android:hint="Height in Meter"
            android:textAlignment="center"
            android:textSize="30dp" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/wightBtn"
        android:layout_below="@+id/heightBtn"
        android:layout_marginTop="20dp"
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:background="#6f7693">

        <TextView
            android:id="@+id/weight1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:text="WEIGHT"/>

<!--        <TextView-->
<!--            android:id="@+id/wight2"-->

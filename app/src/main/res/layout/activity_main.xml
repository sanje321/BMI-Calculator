<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#04040c"
    android:padding="20dp"
    android:layout_weight="1"
    android:layout_gravity="center">

    <RelativeLayout
        android:id="@+id/maleBtn"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:background="#6f7693"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/maleLogo"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:text="♂"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="90dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_below="@+id/maleLogo"
            android:text="MALE"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/femaleBtn"
        android:layout_toRightOf="@+id/maleBtn"
        android:background="#6f7693"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/femaleLogo"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:text="♀"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="90dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_below="@+id/femaleLogo"
            android:text="FEMALE"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/heightBtn"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/femaleBtn"
        android:layout_marginTop="20dp"
        android:background="#6f7693">

        <TextView
            android:id="@+id/height1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="HEIGHT"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

